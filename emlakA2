    <script>
        // DOM elementlerini seÃ§me
        const slides = document.querySelectorAll('.slide');
        const progressBar = document.getElementById('progress-bar');
        const startBtn = document.getElementById('start-btn');
        const prevBtns = document.querySelectorAll('.prev-btn');
        const nextBtns = document.querySelectorAll('.next-btn');
        const quizBtn = document.querySelector('.quiz-btn');
        const quizContainer = document.getElementById('quiz-container');
        const submitQuizBtn = document.getElementById('submit-quiz');
        const resultsContainer = document.getElementById('results-container');
        const scoreValue = document.getElementById('score-value');
        const feedback = document.getElementById('feedback');
        const questionResults = document.getElementById('question-results');
        const certificateDate = document.getElementById('certificate-date');
        const userName = document.getElementById('user-name');
        const printCertificateBtn = document.getElementById('print-certificate');
        const scoreMeterFill = document.getElementById('score-meter-fill');

        // DoÄŸru cevaplar
        const correctAnswers = {
            q1: 'b',
            q2: 'b',
            q3: 'c',
            q4: 'd',
            q5: 'c',
            q6: 'a',
            q7: 'b',
            q8: 'b',
            q9: 'c',
            q10: 'b'
        };

        let currentSlide = 0;
        const totalSlides = slides.length;

        // Ä°lerleme Ã§ubuÄŸunu gÃ¼ncelleme
        function updateProgressBar() {
            const progress = (currentSlide / (totalSlides - 1)) * 100;
            progressBar.style.width = `${progress}%`;
        }

        // SlaytlarÄ± gÃ¶sterme
        function showSlide(n) {
            slides.forEach(slide => slide.classList.remove('active'));
            slides[n].classList.add('active');
            currentSlide = n;
            updateProgressBar();
        }

        // BaÅŸlangÄ±Ã§ slaytÄ±
        showSlide(0);

        // EÄŸitime baÅŸla butonuna tÄ±klama
        startBtn.addEventListener('click', function() {
            showSlide(1);
        });

        // Ã–nceki butona tÄ±klama
        prevBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                if (currentSlide > 0) {
                    showSlide(currentSlide - 1);
                }
            });
        });

        // Sonraki butona tÄ±klama
        nextBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                if (currentSlide < totalSlides - 1) {
                    showSlide(currentSlide + 1);
                }
            });
        });

        // Teste baÅŸla butonuna tÄ±klama
        quizBtn.addEventListener('click', function() {
            quizContainer.classList.remove('hidden');
            slides[currentSlide].classList.remove('active');
            window.scrollTo(0, 0);
        });

        // Testi tamamla butonuna tÄ±klama
        submitQuizBtn.addEventListener('click', function() {
            // CevaplarÄ± kontrol et
            let score = 0;
            let resultsHTML = '';

            for (let i = 1; i <= 10; i++) {
                const questionId = `q${i}`;
                const selectedAnswer = document.querySelector(`input[name="${questionId}"]:checked`)?.value;
                
                // DoÄŸru cevap kontrolÃ¼
                if (selectedAnswer === correctAnswers[questionId]) {
                    score++;
                    resultsHTML += `
                        <div class="question-result">
                            <div class="question-text">${i}. Soru</div>
                            <div class="correct-answer">âœ“ DoÄŸru cevap: ${getAnswerText(questionId, correctAnswers[questionId])}</div>
                        </div>
                    `;
                } else {
                    resultsHTML += `
                        <div class="question-result">
                            <div class="question-text">${i}. Soru</div>
                            <div class="wrong-answer">âœ— YanlÄ±ÅŸ cevap${selectedAnswer ? ': ' + getAnswerText(questionId, selectedAnswer) : ': Cevap verilmedi'}</div>
                            <div class="correct-answer">âœ“ DoÄŸru cevap: ${getAnswerText(questionId, correctAnswers[questionId])}</div>
                        </div>
                    `;
                }
            }

            // 100 puan Ã¼zerinden hesaplama
            const percentScore = (score / 10) * 100;
            scoreValue.textContent = `${percentScore}/100`;
            
            // Geri bildirim
            let feedbackText = '';
            let resultImage = '';
            
            if (percentScore >= 70) {
                feedbackText = '<h3 style="color: #43a047; font-size: 28px;">Tebrikler BaÅŸardÄ±nÄ±z!</h3><p>MÃ¼kemmel! Emlak profesyoneli olarak gerÃ§ekten Ã¼stÃ¼n bir performans gÃ¶sterdiniz!</p>';
                resultImage = `
                    <div style="text-align: center; margin: 20px 0;">
                        <img src="/api/placeholder/300/300" alt="baÅŸarÄ±" style="border-radius: 10px;" />
                        <p style="font-style: italic; margin-top: 10px;">Emlak sektÃ¶rÃ¼nÃ¼n yeni yÄ±ldÄ±zÄ± sizsiniz! ğŸŒŸ</p>
                    </div>
                `;
            } else {
                feedbackText = '<h3 style="color: #e53935; font-size: 28px;">LÃ¼tfen Tekrar Deneyiniz</h3><p>Biraz daha Ã§alÄ±ÅŸmanÄ±z gerekiyor. EÄŸitim materyallerini tekrar gÃ¶zden geÃ§irmenizi Ã¶neririz.</p>';
                resultImage = `
                    <div style="text-align: center; margin: 20px 0;">
                        <img src="/api/placeholder/300/300" alt="Ã¼zgÃ¼n" style="border-radius: 10px;" />
                        <p style="font-style: italic; margin-top: 10px;">EndiÅŸelenmeyin, bir sonraki sefere daha iyi olacak! ğŸ˜‰</p>
                    </div>
                `;
            }
            
            feedback.innerHTML = feedbackText + resultImage;
            questionResults.innerHTML = resultsHTML;
            
            // Sertifika tarihini ayarla
            const today = new Date();
            certificateDate.textContent = today.toLocaleDateString('tr-TR');
            
            // SonuÃ§larÄ± gÃ¶ster
            quizContainer.classList.add('hidden');
            resultsContainer.style.display = 'block';
            window.scrollTo(0, 0);
            
            // Puanlama Ã§ubuÄŸunu animasyonla doldur (gecikmeli)
            scoreMeterFill.style.width = '0%';
            setTimeout(() => {
                scoreMeterFill.style.width = `${percentScore}%`;
            }, 500);
        });

        // SertifikayÄ± yazdÄ±r
        printCertificateBtn.addEventListener('click', function() {
            // KullanÄ±cÄ± adÄ±nÄ± al (Ã¶rnek olarak istenirse prompt ile)
            const name = prompt('LÃ¼tfen sertifikada gÃ¶rÃ¼necek adÄ±nÄ±zÄ± ve soyadÄ±nÄ±zÄ± girin:', 'DeÄŸerli KatÄ±lÄ±mcÄ±');
            if (name) {
                userName.textContent = name;
            }
            
            // YazdÄ±rma iÅŸlemi
            window.print();
        });

        // Cevap metnini alma fonksiyonu
        function getAnswerText(questionId, answerValue) {
            const questionElement = document.getElementById(questionId);
            const answerElement = questionElement.querySelector(`input[value="${answerValue}"]`).parentNode;
            return answerElement.textContent.trim();
        }

        // Option tÄ±klama olayÄ±
        document.querySelectorAll('.option').forEach(option => {
            option.addEventListener('click', function() {
                // AynÄ± soru iÃ§in diÄŸer seÃ§enekleri temizle
                const name = this.querySelector('input').name;
                document.querySelectorAll(`input[name="${name}"]`).forEach(radio => {
                    radio.parentNode.classList.remove('selected');
                });
                
                // SeÃ§ilen seÃ§eneÄŸi iÅŸaretle
                this.classList.add('selected');
            });
        });
    </script>
